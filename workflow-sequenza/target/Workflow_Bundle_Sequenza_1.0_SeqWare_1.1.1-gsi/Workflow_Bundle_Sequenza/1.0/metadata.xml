<bundle version="1.0">
    <workflow name="Sequenza" version="1.0" seqware_version="1.1.1-gsi"
              basedir="${workflow_bundle_dir}/Workflow_Bundle_Sequenza/1.0">
        <description>This workflow runs sequenza tool to generate a copy number segmented file. It uses samtools, R and pypy.</description>
        <test command="java -jar ${workflow_bundle_dir}/Workflow_Bundle_Sequenza/1.0/lib/seqware-distribution-1.1.1-gsi-full.jar --plugin net.sourceforge.seqware.pipeline.plugins.WorkflowLauncher -- --no-metadata --provisioned-bundle-dir ${workflow_bundle_dir} --workflow Sequenza --version 1.0 --ini-files ${workflow_bundle_dir}/Workflow_Bundle_Sequenza/1.0/config/workflow.ini"/>
        <workflow_command command="java -jar ${workflow_bundle_dir}/Workflow_Bundle_Sequenza/1.0/lib/seqware-distribution-1.1.1-gsi-full.jar --plugin net.sourceforge.seqware.pipeline.plugins.WorkflowLauncher -- --bundle ${workflow_bundle_dir} --workflow Sequenza --version 1.0 "/>
        <workflow_template path=""/>
        <workflow_class path="${workflow_bundle_dir}/Workflow_Bundle_Sequenza/1.0/classes/ca/on/oicr/pde/workflows/WorkflowClient.class"/>
        <config path="${workflow_bundle_dir}/Workflow_Bundle_Sequenza/1.0/config/workflow.ini"/>
        <build command="ant -f ${workflow_bundle_dir}/Workflow_Bundle_Sequenza/1.0/build.xml"/>
        <requirements compute="single" memory="20M" network="local"  workflow_engine="Oozie" workflow_type="java"/>
    </workflow>
</bundle>
